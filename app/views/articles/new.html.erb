<h1>New article</h1>

<%= form_for :article, url: articles_path do |f| %>
  <p>
    <%= f.select(:user_id, @users) %>
  </p>

  <p>
    <%= f.label :title %><br>
	<%= f.text_field :title %><br>
  </p>
  
  <p>
    <%= f.label :text %><br>
	<%= f.text_area :text %><br>
  </p>
  
  <p>
    <%= f.submit %>
  </p>
<% end %>