<h1>Add new user</h1>

<%= form_for :user, url: users_path do |u| %>
  <p>
    <%= u.label :fname %><br>
	<%= u.text_field :fname %><br>
  </p>
  
  <p>
    <%= u.label :lname %><br>
	<%= u.text_field :lname %><br>
  </p>
  
  <p>
    <%= u.label :patronymic %><br>
	<%= u.text_field :patronymic %><br>
  </p>
  
  <p>
    <%= u.label :phone %><br>
	<%= u.text_field :phone %><br>
  </p>
  
  <p>
    <%= u.submit %>
  </p>
<% end %>